<UserControl x:Class="WpfApp.View.DepartmentEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="true">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnOk" Content="Save" Margin="10,10,10,10" Padding="10,10,10,10" Click="btnOk_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Margin="10,10,10,10" Padding="10,10,10,10" Click="btnCancel_Click"/>
        </StackPanel>
        <StackPanel Margin="10,10,10,10">
            <TextBlock Text="Name:" Padding="10,10,10,10"/>
            <TextBox x:Name="tbxName"  Text="" KeyDown="tbxName_KeyDown"/>
        </StackPanel>
    </DockPanel>


</UserControl>

<Window x:Class="WpfApp.View.SendMailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.View"
        mc:Ignorable="d"
        Title="SendMailDialog" Height="300" Width="500" Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner">
    <DockPanel LastChildFill="True">
        <Button x:Name="btnFinish" Content="Finish" DockPanel.Dock="Bottom" IsEnabled="False" 
                Margin="20" Padding="20" Click="btnFinish_Click"/>
        <TextBlock x:Name="tbMessage" Text="Sending Email"
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" 
                   TextWrapping="Wrap"/>
    </DockPanel>
</Window>
